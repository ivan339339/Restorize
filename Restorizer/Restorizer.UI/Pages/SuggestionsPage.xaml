<Page x:Class="Restorizer.UI.Pages.SuggestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restorizer.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SuggestionsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="DishesListView" Margin="10" DisplayMemberPath="Title" SelectionChanged="DishesListView_SelectionChanged">
            
        </ListView>

        <Grid Grid.Column="1" Background="#FFE6AABE" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Name="BrowseButton" Grid.Row="0" Margin="10 20 10 10" Padding="20 10" FontSize="15" IsEnabled="False">
                Browse
            </Button>
            <Button Name="BackButton" Grid.Row="2" Margin="10" Padding="20 10" FontSize="15" Click="BackButton_Click">
                Back
            </Button>

        </Grid>

    </Grid>
</Page>
