<Page x:Class="Restorizer.UI.Pages.IngredientStatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restorizer.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="IngredientStatisticsPage">

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.ColumnSpan="2" Grid.Row="1" DisplayMemberPath="Info" Margin="15" Name="IngredientListBox" FontFamily="Verdana"></ListBox>
        <Button Name="ButtonShow" Grid.Column="1" Margin="10" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonShow_Click" Padding="10">
            Show
        </Button>
        <Label VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center" FontFamily="Verdana">Show the 5 least popular ingredients</Label>
    </Grid>
</Page>
